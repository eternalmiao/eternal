<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>cn.bug.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>charSet</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>cn.bug.servlet.Controller</servlet-class>
    </servlet>
  <servlet>
    <servlet-name>CartServlet</servlet-name>
    <servlet-class>cn.bug.action.CartServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ChangeCanumServlet</servlet-name>
    <servlet-class>cn.bug.servlet.ChangeCanumServlet</servlet-class>
  </servlet>
   
  <servlet>
    <servlet-name>SingleSizeServlet</servlet-name>
    <servlet-class>cn.bug.servlet.SingleSizeServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>CheckNameServlet</servlet-name>
    <servlet-class>cn.bug.servlet.CheckNameServlet</servlet-class>
  </servlet>


    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    
  <servlet-mapping>
    <servlet-name>CartServlet</servlet-name>
    <url-pattern>/CartServlet</url-pattern>
    </servlet-mapping>
    
  <servlet-mapping>
    <servlet-name>SingleSizeServlet</servlet-name>
    <url-pattern>/SingleSizeServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CheckNameServlet</servlet-name>
    <url-pattern>/CheckNameServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChangeCanumServlet</servlet-name>
    <url-pattern>/ChangeCanumServlet</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>RECheckEmailServlet</servlet-name>
        <servlet-class>cn.bug.servlet.RECheckEmailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RECheckEmailServlet</servlet-name>
        <url-pattern>/RECheckEmailServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RECheckNameServlet</servlet-name>
        <servlet-class>cn.bug.servlet.RECheckNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RECheckNameServlet</servlet-name>
        <url-pattern>/RECheckNameServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RECheckPhoneServlet</servlet-name>
        <servlet-class>cn.bug.servlet.RECheckPhoneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RECheckPhoneServlet</servlet-name>
        <url-pattern>/RECheckPhoneServlet</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>cn.bug.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/updateInfo.jsp</url-pattern>
        <url-pattern>/myInfo.jsp</url-pattern>
        <url-pattern>/order.jsp</url-pattern>
        <url-pattern>/wishlist.jsp</url-pattern>
        <url-pattern>/cart.jsp</url-pattern>
        <url-pattern>/checkout.jsp</url-pattern>
    </filter-mapping>
</web-app>

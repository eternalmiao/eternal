	@Override
	public Goods findGoodsById(int gid) {
		String sql = "select * from goods where gid=?";
		ResultSet rs = executeQuery(sql, gid);
		if (rs != null) {
			try {
				if (rs.next()) {
					return getEntity(rs);
				}
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		} 
		return null;
	}

